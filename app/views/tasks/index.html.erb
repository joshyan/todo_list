<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="task-list">
    <% @tasks.each do |task| %>
      <tr id="task_<%= task.id %>">
      <td><%= task.content %></td>
      <td><%= task.status %></td>
      <td><%= link_to 'Show', task %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new-task-link"><%= link_to 'New Task', new_task_path, remote: true %></div>

<div id="task-form" style="display:none;"></div>

